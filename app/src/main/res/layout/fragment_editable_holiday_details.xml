<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobile.apex.scrapbook21.MainActivity">
    <!-- tools:showIn="@layout/activity_main"> -->

    <EditText
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/holiday_name"
        android:textColor="@android:color/darker_gray" />

    <EditText
        android:id="@+id/notesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/holiday_notes"
        android:textColor="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/start_text"
            android:gravity="center"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/start_text"
            android:onClick="showDatePickerDialog" />

        <TextView
            android:id="@+id/end_text"
            android:text="@string/end_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/endButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/end_text"
            android:onClick="showDatePickerDialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:text="Location: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/hdf_input_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ic_magnify"
            android:hint="Enter Address, City or Area Code"
            android:imeOptions="actionSearch"
            android:textColor="#000"
            android:textSize="15sp"
            android:inputType="text"
            />

    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        android:id="@+id/mapView">
    </com.google.android.gms.maps.MapView>

</LinearLayout>